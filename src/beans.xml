<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       		http://www.springframework.org/schema/context
       		http://www.springframework.org/schema/context/spring-context-2.5.xsd
           ">


	<context:annotation-config />
	
	
	<bean name="userDAO1" class="com.daxia.dao.impl.UserDAOImpl">
		<property name="daoId" value="1"></property>
	</bean>

	<bean name="userDAO2" class="com.daxia.dao.impl.UserDAOImpl">
		<property name="daoId" value="2"></property>
	</bean>

	<!-- set注入：将u注入userService -->
	<bean id="userService" class="com.daxia.service.UserService"
		init-method="init" destroy-method="destroy">
		<property name="userDAO" ref="userDAO1"></property>
	</bean>
</beans>